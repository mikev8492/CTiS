<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script>

    var ctx = document.getElementById('myChart');

    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['APH', 'Pre-MACS', 'Post-MACS', 'CRYO'],
            datasets: [{

                label: 'Total Viable Cells',

                data: [
                        <%= data.aph_TVC %>, 
                        <%= data.macs_preTVC %>, 
                        <%= data.macs_postTVC %>,
                        <%= data.cryo_preFormTVC %>, 
                ],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(255, 99, 132, 1)',
                ],
                borderWidth: 1
            },
            {
                label: 'Dose',
                fill: false,
                backgroundColor: '#1ad99c',
                borderColor: '#1ad99c',
                borderDash: [5, 5],
                data: [
                    <%= data.dose %>,
                    <%= data.dose %>,
                    <%= data.dose %>,
                    <%= data.dose %>,
                ],
            }
            ]
        },
        options: {
            responsive: true,
            title: {
                display: true,
                text: 'Process Snapshot',
                fontSize: 18
            },
            tooltips:{
                mode: 'index',
                intersect: false
            },
            hover: {
                mode: 'nearest',
                intersect: true
            },
            maintainAspectRatio: true,
            scales: {
                yAxes: [{
                    scaleLabel: {
                        display: true,
                        labelString: 'e6 cells'
                    },
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>